{
  "name": "coderef-dashboard",
  "version": "0.1.0",
  "description": "Modular widget system with PWA and Electron support",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/widgets/@coderef-dashboard/*",
    "packages/dashboard",
    "packages/electron-app"
  ],
  "scripts": {
    "dev": "npm run dev -w packages/dashboard",
    "dev:electron": "npm run dev -w packages/electron-app",
    "build": "npm run build:widgets && npm run build -ws --if-present",
    "build:widgets": "node scripts/build-widgets.js",
    "build:dashboard": "npm run build -w packages/dashboard",
    "build:electron": "npm run build -w packages/electron-app",
    "package:win": "npm run package:win -w packages/electron-app",
    "test": "npm test -ws --if-present",
    "lint": "npm run lint -ws --if-present",
    "type-check": "npm run type-check -ws --if-present"
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "esbuild": "^0.19.11",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
