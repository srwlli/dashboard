{
  "name": "@coderef/core",
  "version": "2.0.0",
  "description": "Core scanning and parsing library for CodeRef system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./search-client": {
      "types": "./dist/src/search-client.d.ts",
      "default": "./dist/src/search-client.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "acorn": "^8.15.0",
    "glob": "^11.0.3",
    "minimatch": "^10.0.3",
    "zod": "^4.1.12"
  }
}
