{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "types": ["node"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "lib": ["ES2019", "ES2020"],
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "*.ts",
    "utils/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "demo-all-modules.ts",
    "src/integration/**/*.ts",
    "vitest.config.ts"
  ]
}
