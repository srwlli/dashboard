{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "types": ["node"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "lib": ["ES2019", "ES2020"]
  },
  "include": [
    "*.ts",
    "utils/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "demo-all-modules.ts",
    "parser.ts",
    "types.ts"
  ]
}
