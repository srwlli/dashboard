{
  "name": "@coderef-dashboard/electron-app",
  "version": "0.1.0",
  "description": "Electron wrapper for coderef-dashboard",
  "private": true,
  "main": "dist/main.js",
  "preload": "dist/preload.js",
  "scripts": {
    "dev": "electron .",
    "build": "tsc",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@coderef-dashboard/dashboard": "file:../dashboard",
    "electron-is-dev": "^3.0.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.10.6",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.coderef.dashboard",
    "productName": "CodeRef Dashboard",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
